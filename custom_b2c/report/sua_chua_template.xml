<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_suachua_document">
        <t t-call="web.external_layout">
            <t t-set="doc" t-value="doc.with_context(lang=doc.khach_hang.lang)"/>

            <div class="page">
                <div class="oe_structure"/>

                <h2 class="mt16">
                    <span>Phiếu sửa chữa #</span>
                    <span t-field="doc.code"/>
                </h2>

                <div class="row mt32 mb32" id="informations">
                    <div class="col-auto col-3 mw-100 mb-2">
                        <strong>Tên khách hàng: <span class="m-0" t-field="doc.khach_hang.name"/></strong>
                    </div>
                </div>

                <table class="table table-sm o_main_table">
                    <!-- In case we want to repeat the header, remove "display: table-row-group" -->
                    <thead style="display: table-row-group">
                        <tr>
                            <th name="th_description" class="text-left">Product Name</th>
                            <th name="th_quantity" class="text-right">Serial</th>
                            <th name="th_priceunit" class="text-right">Qty</th>
                            <th name="th_priceunit" class="text-right">Note</th>
                        </tr>
                    </thead>
                    <tbody class="sale_tbody">
                        <t t-foreach="doc.products" t-as="line">
                            <tr t-att-class="'bg-200 font-weight-bold o_line_section'">
                                <td name="td_product_template" class="text-right">
                                    <span t-field="line.product_template"/>
                                </td>
                                <td name="td_serial_num" class="text-right">
                                    <span t-field="line.serial_num"/>
                                </td>
                                <td name="td_qty" class="text-right">
                                    <span t-field="line.qty"/>
                                </td>
                                <td name="td_note" class="text-right">
                                    <span t-field="line.note"/>
                                </td>
                            </tr>
                            <tr class="is-subtotal text-right">
                                <td name="td_section_subtotal" colspan="99">
                                </td>
                            </tr>
                        </t>
                        <tr class="is-subtotal text-right">
                            <td name="td_section_subtotal" colspan="99">
                                <strong class="mr16">Chi phí sửa chữa / bảo hành</strong>
                                <span t-field="doc.chi_phi"/>
                            </td>
                        </tr>

                    </tbody>
                </table>
                <div class="mt32 ml64 mr4" name="signature">
                    <div class="offset-8">
                        <strong>Đóng dấu</strong>
                    </div>
                    <div class="offset-8">
                        <img src='/custom_b2c/static/description/icon.png' style="max-height: 45px;"/>
                        <!-- <img t-att-src="image_data_uri(doc.signature)" style="max-height: 4cm; max-width: 8cm;"/>-->
                    </div>
                    <div class="offset-8 text-center">
                        <!-- <p t-field="doc.signed_by"/>-->
                        <span>Nhân viên đã ký</span> <br/>
                        <span t-field="doc.nguoi_nhan.name"/>
                    </div>
                </div>
                <div class="oe_structure"/>

                <div>
                    Ngày nhận:
                    <span t-field="doc.ngay_nhan"/>
                </div>
            </div>
        </t>
    </template>

    <template id="report_suachua">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="custom_b2c.report_suachua_document" t-lang="doc.khach_hang.lang"/>
            </t>
        </t>
    </template>
</odoo>

